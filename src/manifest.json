{
    "name": "Words",
    "short_name": "Words",
    "version": "0.117",
    "manifest_version": 2,
    "description": "Better comments everywhere",
    "icons": {
        "16": "images/words_logo3_16x16.png",
        "48": "images/words_logo3_48x48.png",
        "128": "images/words_logo3_128x128.png"
    },
    "browser_action": {
        "default_icon": "images/words_logo3_19x19.png",
        "default_title": "View comments for this page",
        "default_popup": "overlay.html"
    },
     "background": {
        "page": "background.html"
    },
    "content_scripts": [{
        "matches": ["https://accounts.google.com/o/oauth2/approval*"],
        "js": ["/js/jquery-1.8.2.js", "/js/approval.js"],
        "run_at": "document_end"
    }, {
        "matches": ["https://www.facebook.com/connect/login_success.html*"],
        "js": ["/js/jquery-1.8.2.js", "/js/approval.js"],
        "run_at": "document_end"
    }],
    "permissions": [
        "https://w.ords.co/",
        "tabs",
        "identity"
    ],
    "web_accessible_resources": ["receiver.html", "images/*", "js/jquery-1.8.2.js", "js/jquery.ddslick.js"],
    "content_security_policy": "script-src 'self' https://www.google-analytics.com https://ajax.googleapis.com https://accounts.google.com; object-src 'self'"
}
