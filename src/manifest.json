{
    "name": "WORDS",
    "short_name": "WORDS",
    "version": "0.142",
    "manifest_version": 2,
    "description": "Smarter, safer web comments",
    "icons": {
        "16": "images/words_logo4_16.png",
        "48": "images/words_logo4_48.png",
        "128": "images/words_logo4_128.png"
    },
    "browser_action": {
        "default_icon": "images/words_logo4_19_bubble.png",
        "default_title": "View comments for this page",
        "default_popup": "overlay.html"
    },
     "background": {
        "page": "background.html"
    },
    "content_scripts": [{
        "matches": ["https://accounts.google.com/o/oauth2/approval*"],
        "js": ["/js/jquery-1.8.2.min.js", "/js/approval.js"],
        "run_at": "document_end"
    }, {
        "matches": ["https://www.facebook.com/connect/login_success.html*"],
        "js": ["/js/jquery-1.8.2.min.js", "/js/approval.js"],
        "run_at": "document_end"
    }, {
        "matches": ["http://www.words4chrome.com/*"],
        "js": ["/js/already_installed.js"],
        "run_at": "document_end"
    }],
    "permissions": [
        "tabs"
    ],
    "web_accessible_resources": ["receiver.html", "images/*", "js/jquery-1.8.2.min.js"],
    "content_security_policy": "script-src 'self'; object-src 'self'"
}
